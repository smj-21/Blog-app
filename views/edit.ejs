<%- include('partials/header') %>

<div class="ui main text container segment">
    <div class="ui huge header">EDIT <%= blog.title %></div>
    <form class="ui form" action="/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" value="<%= blog.title %>" name="blog[title]">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" value="<%= blog.image %>" name="blog[image]">
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea name="blog[body]"><%= blog.body %></textarea>
        </div>   
        <input class="ui teal basic button big" type="submit"> 
    </form>
</div>


<%- include('partials/footer') %>